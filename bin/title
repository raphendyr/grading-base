#!/bin/sh

element="h1"
class=""
stdout="${OUTPUT_IS_CAPTURED:+x}"
while [ $# -gt 0 ]; do
	case "$1" in
		-c) class="$class${class:+ }$2" ; shift ;;
		-e) element="$2" ; shift ;;
		-O) stdout="x" ;;
		--) shift ; break ;;
		-*) echo "ERROR: Invalid option '$1' for $0" >&2 ; exit 64 ;;
		*) break ;;
	esac
	shift
done

if [ -z "$stdout" -a -w /feedback ]; then
	exec >> /feedback/out
fi

if [ "$element" ]; then
	[ "$class" ] && class_a=" class=\"$class\""
	printf "<%s%s>%s</%s>\n" "$element" "$class_a" "$*" "$element"
else
	printf "%s\n" "$*"
fi
